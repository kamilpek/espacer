<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> – wirtualny spacer po Łubianie</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="//maps.google.com/maps/api/js?key=AIzaSyCx3WpXtmfwjePmkgLqXZnV7VvM03i0ICE"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
  </head>

  <body>
    <div class="container-fluid">
      <div class="row">
        <%= render 'layouts/header' %>
        <%= render partial: 'layouts/messages', flash: flash %>
        <nav class="col-md-2 d-none d-md-block bg-light sidebar">
          <div class="sidebar-sticky">
            <h5>Lista miejsc</h5>
            <% @places.each do |place| %>
              <%= link_to place.name, place, :title => "Panoramy", class:"btn btn-sm btn-solectwo btn-outline-solectwo" %>
            <% end %>
            <% if user_signed_in? %>
              <%= link_to 'Panoramy',places_path, :title => "Panoramy", class:"btn btn-sm btn-solectwo btn-outline-solectwo" %>
              <%= link_to 'Nowe miejsce', new_place_path, class:"btn btn-sm btn-solectwo btn-outline-solectwo" %>
              <%= link_to 'Użytkownicy', pages_users_path, class:"btn btn-sm btn-solectwo btn-outline-solectwo" %>
              <%= link_to 'Wyloguj', destroy_user_session_path, :method => :delete, class:"btn btn-sm btn-solectwo btn-outline-solectwo" %>
            <% end %>
            <div class="footer-copyright text-center py-3">
              <%= link_to (image_tag "solectwo_logo.png", class:"full-img"), "http://solectwolubiana.pl" %>
            </div>
          </div>
        </nav>
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
          <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
            <%= yield %>
          </div>
        </main>
      </div>
    </div>
  </body>
</html>
